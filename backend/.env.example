# Supabase Configuration
SUPABASE_URL=your_supabase_url_here
SUPABASE_SERVICE_ROLE_KEY=REPLACE_WITH_SUPABASE_SERVICE_ROLE_KEY

# Fallback (not recommended when RLS is enabled):
# SUPABASE_KEY=your_supabase_anon_or_publishable_key_here
# Server Configuration
PORT=4000

# Session Secret (change in production!)
SESSION_SECRET=your_secret_session_key_here

# Public Base URL for links in emails (frontend URL)
PUBLIC_BASE_URL=http://localhost:5173

# Verification token TTL (hours). After this, the verify link is considered expired.
VERIFICATION_TOKEN_TTL_HOURS=72

# SMTP configuration for sending emails
# Use Ethereal for dev/test email preview links
MAIL_TRANSPORT=ethereal
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
FROM_EMAIL="BKSB Elternsprechtag <no-reply@bksb.example>"
